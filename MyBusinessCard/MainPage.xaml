<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="MyBusinessCard.MainPage"
  Shell.NavBarIsVisible="False">

  <ScrollView>
    <VerticalStackLayout
      Spacing="25"
      Padding="30,0"
      VerticalOptions="Center">

      <Button Text="LinkedIn" Clicked="OnLinkedInButtonClicked" />
      <Button Text="Blog" Clicked="OnBlogClicked" />
      <Button Text="Web" Clicked="OnWebButtonClicked" />

    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
